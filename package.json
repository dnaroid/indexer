{
  "name": "@dnaroid/mcp-code-indexer",
  "version": "1.3.2",
  "description": "Local code indexer and MCP server for AI agents",
  "keywords": [
    "mcp",
    "mcp-server",
    "ai",
    "indexer",
    "search",
    "qdrant",
    "ollama",
    "vector-search",
    "rag"
  ],
  "author": "Dnaroid",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnaroid/indexer.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "indexer": "build/indexer.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc && mkdir -p build/lib/utils/grammars && cp lib/utils/grammars/*.wasm build/lib/utils/grammars/ && cp lib/cli/mcp-proxy-template.js build/lib/cli/",
    "watch": "tsc --watch",
    "start": "node build/indexer.js",
    "install-global": "npm run build && npm install -g .",
    "uninstall-global": "npm uninstall -g @dnaroid/mcp-code-indexer",
    "link": "npm link",
    "pretest": "bash scripts/cleanup-before-tests.sh",
    "test": "npm run build && node scripts/run_tests.js",
    "prepublishOnly": "npm run build && npm test",
    "release": "npm version patch && git push --follow-tags && npm publish",
    "typecheck": "tsc --noEmit",
    "update-mcp-proxy": "node update_mcp_from_template.js"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "better-sqlite3": "^11.8.1",
    "chokidar": "^5.0.0",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "minimatch": "^10.1.1",
    "web-tree-sitter": "^0.26.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
