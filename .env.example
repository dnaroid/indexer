# === Local Mode (Recommended) ===

# Path to the indexed project (absolute or relative)
WORKSPACE_DIR=/path/to/your/project

# Qdrant (Local)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=project_index

# Ollama (Local)
OLLAMA_URL=http://127.0.0.1:11434
EMBED_MODEL=nomic-embed-text

# Vector dimensions (depends on the model)
VECTOR_SIZE=768

# Chunking parameters
MAX_CHUNK_LINES=220
OVERLAP_LINES=30
MAX_FILE_BYTES=2097152

# MCP parameters
TOP_K_DEFAULT=5
SCORE_THRESHOLD=0